<?xml version="1.0"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>
<simulator>

    <algorithm id="ANPSO" class="pso.MultiPopPSO">
        <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityType idref="conicalPSO"/>
                <setEntityNumberControlParameter parameter="100" class="controlparameter.ConstantControlParameter"/>
            </initialisationStrategy>

            <iterationStrategy class="niching.iterationstrategies.EnhancedSpeciation">
                <setDelegate class="niching.AdaptiveNichingIterationStrategy">
                    <nicheIterMin parameter="2" class="controlparameter.ConstantControlParameter"/>
                    <nicheIterLength parameter="2" class="controlparameter.ConstantControlParameter"/>
                    <pMax parameter="10" class="controlparameter.ConstantControlParameter"/>
                </setDelegate>
            </iterationStrategy>

            <neighbourhood class="entity.topologies.NichingLabeledNeighbourhood" >
                <unNichedTopology parameter="2" class="controlparameter.ConstantControlParameter"/>
            </neighbourhood>
        </algorithm>

    <measurements id="measurements" class="simulator.MeasurementSuite" resolution="1">
        <addMeasurement class="measurement.single.diversity.Diversity"/>
        <addMeasurement class="measurement.single.ErrorMeasurement"/>
        <addMeasurement class="measurement.single.CollectiveMeanOfMeasurement">
            <measurement class="measurement.single.dynamic.Error"/>
        </addMeasurement>
    </measurements>

    <problems>
        <problem id="MovingPeaks" class="problem.DynamicOptimisationProblem">
            <domain value="R(0.0:100.0)^5"/>
            <function class="functions.continuous.dynamic.GeneralisedMovingPeaks">
		<peaks value = "1"/>
		<frequency value = "100"/>
		<lambda value = "0.75"/>
		<shiftSeverity value = "5.0"/>
		<widthSeverity value = "0.01"/>
		<heightSeverity value = "7.0"/>
		<minWidth value = "1.0"/>
		<maxWidth value = "12.0"/>
		<minHeight value = "30.0"/>
		<maxHeight value = "70.0"/>
	    </function>
        </problem>

        <simulation samples="30">
            <algorithm idref="chargedPSO"/>
            <problem idref="MovingPeaks"/>
            <measurements idref="measurements"/>
	     <output format="TXT" file="data/chargedPSO_MovingPeaks_5_Dimensions.txt"/>
        </simulation>
    </problems>
</simulator>
