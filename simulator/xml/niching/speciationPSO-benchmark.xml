<?xml version="1.0"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>
<simulator>
    <algorithms>
        <algorithm id="speciationPSO" class="pso.PSO">
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="25000">
                <predicate class="stoppingcondition.Maximum"/>
                <measurement class="measurement.single.ParticlePositionUpdates"/>
            </addStoppingCondition>

            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityType class="pso.particle.StandardParticle"/>
                <entityNumber value="20"/>
            </initialisationStrategy>

            <iterationStrategy class="pso.iterationstrategies.SpeciationIterationStrategy">
                <neighbourhoodSize class="controlparameter.ConstantControlParameter" parameter="50"/>
                <!--radius class="controlparameter.NichingRadiusControlParameter"/-->
                <radius class="controlparameter.ConstantControlParameter" parameter="0.1"/>
                <boundaryConstraint class="problem.boundaryconstraint.ReinitialisationBoundary"/>
            </iterationStrategy>
        </algorithm>
    </algorithms>

    <problems>
        <problem id="f1" class="problem.FunctionOptimisationProblem" domain="R(0:1)">
            <objective class="problem.objective.Minimise"/>
            <function class="functions.continuous.unconstrained.EqualMinima"/>
        </problem>

        <problem id="f2" class="problem.FunctionOptimisationProblem" domain="R(1:5)^5">
            <objective class="problem.objective.Minimise"/>
            <function class="functions.continuous.unconstrained.UnevenDecreasingMinima"/>
        </problem>

        <problem id="f3" class="problem.DeratingOptimisationProblem" domain="R(-6:6)^2">
            <objective class="problem.objective.Minimise"/>
            <function class="functions.continuous.unconstrained.InvertedHimmelblau"/>
        </problem>

        <problem id="f4" class="problem.FunctionOptimisationProblem" domain="R(0.0:1.0)^2">
            <objective class="problem.objective.Minimise"/>
            <function class="functions.continuous.unconstrained.Rastrigin"/>
        </problem>

        <problem id="f5" class="problem.FunctionOptimisationProblem" domain="R(-1.9:1.9)^2">
            <objective class="problem.objective.Minimise"/>
            <function class="functions.continuous.unconstrained.InvertedSixHumpCamelBack"/>
        </problem>

        <problem id="f6" class="problem.FunctionOptimisationProblem" domain="R(-10:10)^5">
            <objective class="problem.objective.Minimise"/>
            <function class="functions.continuous.unconstrained.InvertedShubert"/>
        </problem>

        <problem id="f7" class="problem.FunctionOptimisationProblem" domain="R(-0.25:10)^5">
            <objective class="problem.objective.Minimise"/>
            <function class="functions.continuous.unconstrained.InvertedVincent"/>
        </problem>
    </problems>

    <measurements id="fitness" class="simulator.MeasurementSuite" resolution="1">
        <addMeasurement class="measurement.single.ParticlePositionUpdates"/>
        <addMeasurement class="measurement.single.SwarmSize"/>
        <addMeasurement class="measurement.multiple.CompositeMeasurement">
            <addMeasurement class="measurement.single.SwarmSize"/>
            <addMeasurement class="measurement.single.Solution"/>
            <addMeasurement class="measurement.single.Fitness"/>
            <addMeasurement class="measurement.single.GradientVectorLength"/>
        </addMeasurement>
    </measurements>

    <simulations>
        <simulation samples="1">
            <algorithm idref="speciationPSO"/>
            <problem idref="f1"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/speciationPSO-f1.txt"/>
        </simulation>
        
        <simulation samples="1">
            <algorithm idref="speciationPSO"/>
            <problem idref="f2"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/speciationPSO-f2.txt"/>
        </simulation>
        
        <simulation samples="1">
            <algorithm idref="speciationPSO"/>
            <problem idref="f3"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/speciationPSO-f3.txt"/>
        </simulation>
        
        <simulation samples="1">
            <algorithm idref="speciationPSO"/>
            <problem idref="f4"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/speciationPSO-f4.txt"/>
        </simulation>
        
        <simulation samples="1">
            <algorithm idref="speciationPSO"/>
            <problem idref="f5"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/speciationPSO-f5.txt"/>
        </simulation>

        <simulation samples="1">
            <algorithm idref="speciationPSO"/>
            <problem idref="f6"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/speciationPSO-f6.txt"/>
        </simulation>
        
        <simulation samples="1">
            <algorithm idref="speciationPSO"/>
            <problem idref="f7"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/speciationPSO-f7.txt"/>
        </simulation>
    </simulations>
</simulator>
